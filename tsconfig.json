{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],

  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "noEmit": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "esnext"],

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,

    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    }
  },
  "esModuleInterop": true
}
